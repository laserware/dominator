{
  "name": "@laserware/dominator",
  "version": "2.5.1",
  "description": "Simplify DOM usage.",
  "browser": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laserware/dominator.git"
  },
  "bugs": "https://github.com/laserware/dominator/issues",
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "dom"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "eslint": "eslint --cache src",
    "prettier": "prettier --cache --write src",
    "prettier:ci": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest"
  },
  "dependencies": {
    "@laserware/arcade": "^3.0.1"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^3.0.1",
    "@rushstack/eslint-patch": "^1.10.2",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.7",
    "@vitest/coverage-istanbul": "^1.5.2",
    "eslint": "^8.57.0",
    "happy-dom": "^14.7.1",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.2"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
