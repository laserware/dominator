{
  "name": "@laserware/dominator",
  "version": "3.0.1-beta.0",
  "description": "Simplify DOM usage.",
  "browser": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laserware/dominator.git"
  },
  "bugs": "https://github.com/laserware/dominator/issues",
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "dom"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "docs:generate": "typedoc  --options typedoc.json",
    "docs:serve": "mkdir -p ./site && cd ./site && ../node_modules/.bin/vite",
    "eslint": "eslint --cache --cache-location \"./node_modules/.cache/.eslintcache\" --no-warn-ignored src **/*.ts",
    "prettier": "prettier --cache --write src",
    "prettier:ci": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest"
  },
  "dependencies": {
    "@laserware/arcade": "^3.10.0"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^5.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.1",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
