{
  "name": "@laserware/dominator",
  "version": "1.1.0",
  "description": "Simplify DOM usage.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "url": "https://github.com/laserware/dominator.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "dom"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json && pnpm format:build",
    "prepublishOnly": "npm run build",
    "preversion": "pnpm lint && pnpm typecheck",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "eslint --cache src",
    "format": "prettier --write \"src/**/**.ts\"",
    "format:build": "prettier --write \"dist/**/**.{js,ts}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@laserware/arcade": "^1.0.1"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^1.0.0",
    "@rushstack/eslint-patch": "^1.3.2",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
